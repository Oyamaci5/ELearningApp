<!--
    This Razor view allows the user to confirm the deletion of a user. It displays user details such as ID, username, and email.

    The user can choose to proceed with the deletion or go back to the user list.

    The view uses Bootstrap classes for styling and layout.
-->
@model Microsoft.AspNetCore.Identity.IdentityUser

@{
    ViewData["Title"] = "Delete User";
}

<h1>Delete User</h1>
<hr />

<h3>Are you sure you want to delete this user?</h3>

<div>
    <dl class="row">
        <dt class="col-sm-2">
            User ID
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class="col-sm-2">
            User Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserName)
        </dd>
        <dt class="col-sm-2">
            Email
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
    </dl>

    <form asp-action="DeleteConfirmed">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to User List</a>
    </form>
</div>


