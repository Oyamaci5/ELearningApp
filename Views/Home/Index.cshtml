@model IEnumerable<elearningapp.Models.Courses>

@{
    Layout = "_LayoutIndex";
}
<style>
    .caro-item {
        height: 400px; /* Set a fixed height for each item */
        margin-right: 10px; /* Adjust margin as needed */
    }

        /* Optional: To center the content vertically and horizontally within each item */
        .caro-item .course-box {
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            height: 100%;
            text-align: center;
        }

</style>
<div class="overlay"></div>
<section id="home" class="video-section js-height-full">

    <div class="home-text-wrapper relative container">
        <div class="home-message">
            <p>Learning Management System</p>
            <small>Edulogy is the ideal choice for your organization, your business and your online education system. Create your online course now with unlimited page templates, color options, and menu features.</small>
            <div class="btn-wrapper">
                <div class="text-center">
                    <a href="#" class="btn btn-primary wow slideInLeft">Read More</a> &nbsp;&nbsp;&nbsp;<a href="#" class="btn btn-default wow slideInRight">Buy Now</a>
                </div>
            </div><!-- end row -->
        </div>
    </div>
    <div class="slider-bottom">
        <span>Explore <i class="fa fa-angle-down"></i></span>
    </div>
</section>
<section class="section gb">
    <div class="container">

        <div class="section-title text-center">
            <h3>Courses</h3>
        </div><!-- end title -->
        <div class="section-button text-end" style="margin-bottom:10px;">
            <a class="btn btn-primary" asp-action="" asp-controller="Courses" >View All Courses</a>
        </div>
        <div id="owl-01" class="owl-carousel owl-theme owl-theme-01">
            @foreach(var item in Model){
            <div class="caro-item">
                <div class="course-box">
                    <div class="image-wrap entry">
                        <img src="@item.ImageUrl" alt="" class="img-responsive">
                        <div class="magnifier">
                            <a href="#" title=""><i class="flaticon-add"></i></a>
                        </div>
                    </div>
                    <div class="course-details">
                        <h4>
                            <small>@item.Category</small>
                            <a href="#" title="">@item.Title</a>
                        </h4>
                        <p>@item.Description</p>
                    </div>
                    <div class="course-footer clearfix">
                        <div class="pull-left">
                            <ul class="list-inline">
                                <li><a href="#"><i class="fa fa-user"></i> @item.EnrollmentCount</a></li>
                                <li><a href="#"><i class="fa fa-clock-o"></i>@item.CourseDuration</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            }
        <hr class="invis">

      
    </div><!-- end container -->

</section>

