@model CourseDetailsViewModel

@{
	ViewData["Title"] = "Index";
}
<section class="section">

	<div class="container">
		<h2>Assignments</h2>
		<div class="row">
			<div class="col-md-6 shop-media">
				<div class="row">
					<div class="col-md-12">
						<div class="image-wrap entry">
							<img src="~/@Model.CourseImageUrl" alt="" class="img-responsive"> <!--src Course,ImageUrl-->
							<div class="magnifier">
								<a rel="prettyPhoto[inline]" href="upload/single_shop_01.jpg" title=""><i class="flaticon-add"></i></a>
							</div>
						</div><!-- end image-wrap -->
					</div>
				</div><!-- end row -->

				<hr class="invis">
			</div><!-- end col -->

			<div class="col-md-6">
				<div class="shop-desc">
					<h3>@Model.CourseTitle</h3> <!--Course,title-->
					<p>@Model.CourseDescription</p> <!--Course,description-->
					<div class="shop-meta">
						<a href="#" class="btn btn-primary">Enroll</a>
						<ul class="list-inline">
							<li>Categories: <a href="#">@Model.CourseCategory</a> <!--Course,category-->
						</ul>
					</div><!-- end shop meta -->
				</div><!-- end desc -->
			</div><!-- end col -->
		</div><!-- end row -->

		<hr class="invis">

		<div class="row">
			<div class="col-md-12">
				<div class="shop-extra">
					<ul class="nav nav-tabs">
						<li class="active"><a data-toggle="tab" href="#home">Course Content</a></li>
					</ul>
					@foreach (var item in Model.Assignments)

					{

						<div class="accordion" id="accordionExample_@item.Id">
							<div class="card">
								<div class="card-header" id="heading_@item.Id">
									<h2 class="mb-0">
										<button class="btn btn-block btn-primary text-left" type="button" data-toggle="collapse" data-target="#collapse_@item.Id" aria-expanded="false" aria-controls="collapse_@item.Id">
											@item.Title
										</button>
									</h2>
								</div>

								<div id="collapse_@item.Id" class="collapse" aria-labelledby="heading_@item.Id" data-parent="#accordionExample_@item.Id">
									<div class="card-body">
										@item.Description
									</div>
								</div>
							</div>
						</div>

					}
				</div><!-- end col -->
			</div>
		</div>
		<hr class="invis">
	</div>
	<!-- end container -->
</section>